{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++ (Safe for PowerShell)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ \"${file}\" -o \"${fileDir}\\${fileBasenameNoExtension}.exe\" && \"${fileDir}\\${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile and run C++ using Command Prompt to avoid PowerShell issues"
    }
  ]
}
